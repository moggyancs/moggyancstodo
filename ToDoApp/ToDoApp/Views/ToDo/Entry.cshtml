@model ToDoApp.Models.ToDo

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@Model.Title</title>
</head>
<body>
    @await Html.PartialAsync("NavBar")

    <div class="container">
        <h2>@Model.Title</h2>
        @if (Model.IsUrgent)
        {
            <p class="text-danger">This task is URGENT</p>
        }

        <p>@Model.Description</p>
    </div>
</body>
</html>